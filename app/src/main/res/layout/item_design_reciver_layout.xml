<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_60sdp">

    <ImageView
        android:id="@+id/userIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/chat_dummy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reciverContantTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_with_gray_border"
        android:fontFamily="@font/montserrat_medium"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="Remember that not getting what you want is sometimes a wonderful stroke of luck."
        android:textColor="@color/gray_color"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userIV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingVertical="@dimen/_5sdp"
        android:text="07:06"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@+id/reciverContantTV"
        app:layout_constraintTop_toBottomOf="@+id/reciverContantTV" />


</androidx.constraintlayout.widget.ConstraintLayout>