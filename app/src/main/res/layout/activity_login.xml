<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingHorizontal="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:text="Sign In"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/gray_color"
            android:text="Hi! Welcome back, you've been\nmissed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_11sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:text="Email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_with_gray_border"
            android:hint="example@gmail.com"
            android:textSize="@dimen/_10sdp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_color"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_11sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:text="Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_with_gray_border"
            android:hint="Password"
            android:textSize="@dimen/_10sdp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_color"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/gradient_1"
            android:text="@string/forget_password"/>

        <TextView
            android:id="@+id/signInTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_9sdp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/gradient_button"
            android:text="Sign In"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp">

            <View
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_1sdp"
                android:alpha=".5"
                android:background="@color/gray_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/gray_color"
                android:text="  or Sign in with  "/>

            <View
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_1sdp"
                android:alpha=".5"
                android:background="@color/gray_color"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingVertical="@dimen/_5sdp">
            
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/iv_facebook"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/iv_apple"
                android:layout_marginHorizontal="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/iv_google_login"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/gray_color"
                android:text="Don't have an account?"/>

            <TextView
                android:id="@+id/signUpTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/gradient_1"
                android:text=" Sign Up"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>